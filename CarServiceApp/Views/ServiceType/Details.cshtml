@model CarServiceApp.Models.ServiceType
@{
    ViewData["Title"] = "Details";
}

<h2>Service Type Details</h2>
<hr />

<form asp-action="Details">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Name" disabled class="form-control" />
                </div>
            </div>
           
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-sm btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
</form>