@model IEnumerable<CarServiceApp.Models.ServiceType>
@{
    ViewData["Title"] = "Index";
}
<br />
<h1>Service Type Manage</h1>
<br/>
<div class="form-border">
    <p>
        <a class="btn btn-sm btn-primary" asp-action="Create">Add Service Type</a>
    </p>
    <br />
    <table class="table table-hover table-condensed">
        <tr>
            <th>
                @Html.DisplayNameFor(m=>m.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
        
            @foreach(var item in Model)
            {
        <tr>
        <td>
            @Html.DisplayFor(m => item.Name)
        </td>
        <td>
            @*@Html.Partial("_TableButtonPartial", new IndividualButton { serviceId = item.id })*@
            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-success"> Edit</a>
            <a asp-action="Details" asp-route-id="@item.id" class="btn btn-sm btn-primary"> Details</a>
            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger"> Delete</a>
        </td>
        </tr>
               
            }
        
    </table> 
</div>

