@model CarServiceApp.ViewModels.CarAndServiceViewModel
@{
    ViewData["Title"] = "Create";
}
<br />
@Html.Partial("_CarDetailsInservice")
<hr />

<h4>Service</h4>
<div>
    <form asp-action="Create">
        <input asp-for="CarId" hidden />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-border" style="padding-left:20px;">
            <div class="col-sm-5">
                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="NewServiceObj.miles" class="custom-control-label"></label>
                    </div>
                    <div class="col-sm-9" style="padding-bottom:5px">
                        <input asp-for="NewServiceObj.miles" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="NewServiceObj.price" class="custom-control-label"></label>
                    </div>
                    <div class="col-sm-9" style="padding-bottom:5px">
                        <input asp-for="NewServiceObj.price" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                    </div>
                    <div class="col-sm-9" style="padding-bottom:5px">
                        <input type="submit" value="Add service" class="btn btn-sm btn-primary form-control" />
                    </div>
                </div>
            </div>


            <div class="col-sm-5 col-sm-offset-2" style="padding-left:30px;">
                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="NewServiceObj.Details" class="custom-control-label"></label>
                    </div>
                    <div class="col-sm-9" style="padding-bottom:5px">
                        <input asp-for="NewServiceObj.Details" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="NewServiceObj.dateAdded" class="custom-control-label"></label>
                    </div>
                    <div class="col-sm-9" style="padding-bottom:5px">
                        <input asp-for="NewServiceObj.dateAdded" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-3">
                        <label asp-for="NewServiceObj.servicetypeId" class="custom-control-label"></label>
                    </div>
                    <div class="col-sm-9" style="padding-bottom:5px">
                        <select asp-for="NewServiceObj.servicetypeId" asp-items="@(new SelectList(Model.ServiceTypesObj, "id","Name"))" class="form-control"></select>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<br />
<hr />
<h4>
    Past Service Records
</h4>

<div class="row form-border">
    <div class="row" style="padding-left:30px;">
        @Html.Partial("_DisplayPastServices", Model)

       
            <div class="col-sm-4">
                @if (Model.PastserviceObj.Count() == 0)
                {
                    <div class="row">
                        <div class="col-sm-12 text-primary" style="padding-bottom:20px;">No past service records found.</div>
                    </div>

                }
            </div>
            <div class="col-sm-4">
                @if (Model.PastserviceObj.Count() > 4)
                {
                    <div class="pull-right" style="padding-right:20px;">
                        <a asp-action="Index" asp-route-carId="@Model.CarId" class="text-primary">Load All .....</a>
                    </div>
                }
            </div>
        
        <div class="row">
            <a asp-controller="Cars" asp-action="Index" asp-route-UserId="@Model.UserId" class="btn btn-primary form-control"> Back To List</a>
        </div>
    </div>
</div>