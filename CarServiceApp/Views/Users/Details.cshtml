@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Details";
}

<h1>User Details</h1>
<form asp-action="Details">
    <div class="form-border">
        <fieldset disabled>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="Email" class="custom-label"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="Email" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <label asp-for="UserName" class="custom-label"></label>
                    </div>
                    <div class="col-sm-10">
                        <input asp-for="UserName" class="form-control" />
                    </div>
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-sm btn-success">Users List</a>
        </div>
    </div>
</form>
