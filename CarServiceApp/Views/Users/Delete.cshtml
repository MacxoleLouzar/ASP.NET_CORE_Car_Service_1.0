@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete User</h1>
<br />
<hr />

<form asp-action="Delete">
    <div class="form-border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="Email" class="custom-label"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="Email" disabled class="form-control" />
                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="UserName" class="custom-label"></label>
                </div>
                <div class="col-sm-10">
                    <input asp-for="UserName" disabled class="form-control" />
                </div>
            </div>

        </div>
        <br />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-sm btn-danger" />
            <a asp-action="Index" class="btn btn-sm btn-success">User List</a>
        </div>
    </div>
</form>

