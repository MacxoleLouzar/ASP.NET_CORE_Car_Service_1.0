@model CarServiceApp.Models.Car

@{
    ViewData["Title"] = "Edit";
}
<br />
<h2>Edit  Car</h2>
<hr />
<form asp-action="Edit">
    <div class="form-border">
        <input type="hidden" asp-for="id" />
        <input type="hidden" asp-for="UserId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="Vin" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="Vin" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Vin" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="make" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="make" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="make" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="model" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="model" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="model" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="style" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="style" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="style" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="color" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="color" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="color" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="Miles" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Miles" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Miles" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-4">
                    <label asp-for="Year" class="custom-label"></label>
                </div>
                <div class="col-sm-8">
                    <input asp-for="Year" class="form-control" />
                </div>
            </div>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>

        <br />
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>
</form>
